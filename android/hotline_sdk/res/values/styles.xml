<resources>

    <style name="Widget" />

    <style name="Widget.Hotline" />

    <style name="TextAppearance.Hotline" parent="TextAppearance.AppCompat"></style>

    <style name="TextAppearance.Hotline.Small" parent="TextAppearance.AppCompat.Small"></style>

    <style name="TextAppearance.Hotline.Medium" parent="TextAppearance.AppCompat.Medium"></style>

    <style name="TextAppearance.Hotline.Large" parent="TextAppearance.AppCompat.Large"></style>

    <!-- Message Styling & Customizations -->

    <style name="Widget.Hotline.MessageList">
        <item name="android:background">@color/hotline_message_list_bg</item>
        <item name="android:divider">@color/hotline_message_list_divider</item>
        <item name="android:dividerHeight">@dimen/hotline_message_lisitem_divider_height</item>
        <item name="android:stackFromBottom">true</item>
        <item name="android:transcriptMode">alwaysScroll</item>
    </style>

    <style name="Widget.Hotline.MessageListItem">
        <item name="android:background">@color/hotline_message_list_item_bg</item>
    </style>

    <style name="Widget.Hotline.MessageDeepLinkButton" parent="Widget.AppCompat.Button">
        <item name="android:textAppearance">@style/TextAppearance.Hotline.MessageDeepLink</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/hotline_label_deeplink</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">100dp</item>
    </style>

    <style name="Widget.Hotline.MessageReplyEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:hint">@string/hotline_hint_compose_message</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">@dimen/hotline_message_send_icon_size</item>
        <item name="android:maxLines">4</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:textColor">@color/hotline_message_reply_text</item>
        <item name="android:textColorHint">@color/hotline_message_reply_hint_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Hotline.MessageReplyView">
        <item name="android:background">@color/hotline_message_reply_view_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/hotline_message_reply_frame_min_height</item>
    </style>

    <style name="TextAppearance.Hotline.AgentName" parent="TextAppearance.Hotline.Small">
        <item name="android:textColor">@color/hotline_text_color</item>
    </style>

    <style name="TextAppearance.Hotline.UserMessage" parent="TextAppearance.Hotline.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Hotline.AgentMessage" parent="TextAppearance.Hotline.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Hotline.UserMessageTime" parent="TextAppearance.Hotline.Small">
        <item name="android:textColor">@color/hotline_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Hotline.AgentMessageTime" parent="TextAppearance.Hotline.Small">
        <item name="android:textColor">@color/hotline_text_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Hotline.MessageDeepLink" parent="TextAppearance.Hotline.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Hotline.VoiceMessageDuration" parent="TextAppearance.Hotline.Small">
        <item name="android:textColor">@color/hotline_text_color</item>
    </style>

    <style name="Widget.Hotline.ConversationBannerMessage">
        <item name="android:background">@color/hotline_contact_us_btn_bg_normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.Hotline.Medium</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Chat Resolution Widget Styles -->

    <style name="Widget.Hotline.ChatResolutionConfirmationPromptView">
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.Hotline.ChatResolutionConfirmationPromptText">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Hotline.Medium</item>
        <item name="android:text">@string/hotline_label_chat_resolution_prompt</item>
    </style>


    <style name="Widget.Hotline.ChatResolutionPositiveButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:text">@string/hotline_label_chat_resolution_positive</item>
    </style>

    <style name="Widget.Hotline.ChatResolutionNegativeButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:text">@string/hotline_label_chat_resolution_negative</item>
    </style>


    <!-- Customer Survey Dialog Customizations -->

    <style name="Widget.Hotline.CustomerSurveryQuestionStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">@integer/hotline_custsat_question_max_lines</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.Hotline</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Hotline.CustomerSurveryCommentsEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:maxLines">3</item>
        <item name="android:hint">@string/hotline_hint_cust_sat_user_comments_hint</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Widget.Hotline.CustomerSurveryRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


