    <!-- FAQ Category Styling & Customizations -->

    <style name="Widget.Hotline.CategoryList">
        <item name="android:background">@null</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="Widget.Hotline.CategoryListItem">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Widget.Hotline.CategoryAltIcon">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/hotline_category_alt_text_bg</item>
        <item name="android:layout_margin">@dimen/hotline_category_icon_padding</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_width">@dimen/hotline_category_icon_alt_view_size</item>
        <item name="android:layout_height">@dimen/hotline_category_icon_alt_view_size</item>
    </style>

    <style name="TextAppearance.Hotline.CategoryName" parent="TextAppearance.Hotline.Medium"></style>

    <style name="TextAppearance.Hotline.CategoryDescription" parent="TextAppearance.Hotline"></style>

    <style name="TextAppearance.Hotline.CategoryListEmptyText" parent="TextAppearance.Hotline.Medium"></style>



    <!-- FAQ List Styling & Customizations -->

    <style name="Widget.Hotline.ArticleList">
        <item name="android:divider">@color/hotline_article_list_divider</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="Widget.Hotline.ArticleListItem">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="TextAppearance.Hotline.ArticleTitle" parent="TextAppearance.Hotline.Medium"></style>

    <style name="TextAppearance.Hotline.ArticleListEmptyText" parent="TextAppearance.Hotline.Medium"></style>

    <!-- FAQ Styling & Customizations -->

    <style name="Widget.Hotline.ArticleVotingPromptText">
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">4dp</item>
        <item name="android:text">@string/hotline_solutions_vote_prompt</item>
    </style>

    <style name="Widget.Hotline.ArticleUpvoteButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:text">@string/hotline_label_article_upvote</item>
    </style>

    <style name="Widget.Hotline.ArticleDownvoteButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:text">@string/hotline_label_article_downvote</item>
    </style>


    <!-- Common -->

    <style name="TextAppearance.Hotline.ContactUs" parent="TextAppearance.Hotline.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
